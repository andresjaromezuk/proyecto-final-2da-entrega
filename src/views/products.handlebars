
{{#each products.docs}}
    <a href="/products/{{this._id}}">
      <h2>Producto: {{this.title}}</h2>
    </a>
    <p>Price: {{this.price}} </p> 
     <div>
      {{#if this.thumbnail.length}}
        {{#each this.thumbnail}}
          <img src="{{this}}" alt="">
        {{/each}}
      {{/if}}
    </div>   
{{/each}}

{{#if products.hasPrevPage}}
  <a href="{{products.prevLink}}">< {{products.prevPage}}</a>
{{/if}}
[{{products.page}}]

{{#if products.hasNextPage}}
  <a href="{{products.nextLink}}">{{products.nextPage}} > </a>
{{/if}}

